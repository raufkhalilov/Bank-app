<UserControl
    x:Class="BankWPFCore.Views.ClientsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:BankWPFCore.Components"
    xmlns:convertors="clr-namespace:BankWPFCore.Converters"
    xmlns:custom="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BankWPFCore.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BankWPFCore.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ClientsListingViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <convertors:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="173*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions />

        <Grid Grid.Column="0" Background="#FFE1FCFC">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>



            <Grid Grid.Row="0" Background="#FF99FFDD">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="МАДИ-банк"
                    FontFamily="/Resourses/Fonts/#Fowviel"
                    FontSize="28"
                    Foreground="Black" />
            </Grid>

            <Grid Grid.Row="1">


                <components:NavigationBar DataContext="{Binding NavigationViewModel}" />


            </Grid>

        </Grid>

        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="20"
                Text="Клиенты нашего банка" />

            <Grid Grid.Row="1" Margin="10,0,10,0">

                <custom:LoadingSpinner
                    Diameter="100"
                    IsLoading="{Binding IsLoading}"
                    Thickness="5"
                    Color="Aquamarine" />

                <DataGrid
                    x:Name="ClientsGrid"
                    AutoGenerateColumns="False"
                    Background="White"
                    BorderBrush="Aqua"
                    BorderThickness="0"
                    IsReadOnly="True"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Clients, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectedClient}"
                    Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">

                    <DataGrid.InputBindings>
                        <MouseBinding
                            Command="{Binding DblOpenClientCardCommand}"

                            MouseAction="LeftDoubleClick" />
                    </DataGrid.InputBindings>

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="25"
                            Binding="{Binding ClientId}"
                            Header="ID" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding ClientName}"
                            Header="Name" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding PhoneNumber}"
                            Header="Phone number" />
                    </DataGrid.Columns>

                </DataGrid>

            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Row="2"
                    Command="{Binding OpenClientCardCommand}"
                    Content="Новый клиент"
                    Style="{StaticResource MyButtonStyle}" />

            </Grid>



        </Grid>

    </Grid>
</UserControl>
