<UserControl
    x:Class="BankWPFCore.Views.ContractBlank"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:BankWPFCore.Components"
    xmlns:convertors="clr-namespace:BankWPFCore.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BankWPFCore.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BankWPFCore.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ContractBlankViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="AliceBlue"
    mc:Ignorable="d">




    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Background="#FF62F6C5">
            <Label Style="{StaticResource MyLabelStyle}" />
        </Grid>


        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Background="#FF99FFDD">
                <TextBlock
                    Grid.Column="0"
                    Margin="20,0,20,0"
                    VerticalAlignment="Center"
                    FontSize="22"
                    Text="Информация по договору" />
            </Grid>

            <Grid Grid.Column="1" Background="#FFA8FFE4" />

        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="1.2*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <components:NavigationBar Height="200" DataContext="{Binding NavigationViewModel}" />
            </Grid>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#FFD3FFF1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="auto"
                    Margin="40,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="ID:" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="auto"
                    Margin="40,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Name:" />

                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="300"
                    Margin="25,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    IsEnabled="False"
                    Text="{Binding ClientID}" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="300"
                    Margin="25,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    IsEnabled="False"
                    Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180" />

                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="20">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="2*" />

                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Width="auto"
                        Margin="20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Contract ID:" />

                    <TextBlock
                        Grid.Row="1"
                        Width="auto"
                        Margin="20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Description:" />

                    <TextBlock
                        Grid.Row="2"
                        Width="auto"
                        Margin="20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Contract amount:" />

                    <TextBlock
                        Grid.Row="3"
                        Width="auto"
                        Margin="20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Start date:" />

                    <TextBlock
                        Grid.Row="4"
                        Width="auto"
                        Margin="20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="End date:" />

                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="300"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        IsEnabled="False"
                        Text="{Binding ContractID, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="300"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="300"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{Binding ContractAmount, UpdateSourceTrigger=PropertyChanged}" />

                    <!--
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="300"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}" />



                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="300"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}" />

                    -->
                    <DatePicker
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="120"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}" />

                    <DatePicker
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="120"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}" />

                </Grid>

                <Grid Grid.Row="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />

                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="180" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,10"
                        Command=""
                        Content="Обновить"
                        IsEnabled="{Binding CanChange}"
                        Style="{StaticResource MyButtonStyle}" />

                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="10,10"
                        Command="{Binding PostContractCommand}"
                        Content="Добавить"
                        IsEnabled="{Binding CanUse}"
                        Style="{StaticResource MyButtonStyle}" />


                </Grid>

            </Grid>


        </Grid>

    </Grid>
</UserControl>
