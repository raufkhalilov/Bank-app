<UserControl
    x:Class="BankWPFCore.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BankWPFCore.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BankWPFCore.ViewModels"
    xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit.Obselete;assembly=Xceed.Wpf.Toolkit"
    d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#FFF3FFFA"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1.4*" />

            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Grid Grid.RowSpan="1" Grid.ColumnSpan="3">
            <Image Source="/Resourses/22214_.jpg" Stretch="UniformToFill" />
        </Grid>

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="#4CDEFEFE">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.3*" />
                <RowDefinition Height="1.3*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Background="#FFA4FFDF">
                <TextBlock
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="30"
                    Text="Вход в систему" />
            </Grid>



        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Width="250"
                    Margin="3,3,6,3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    FontSize="18"
                    Text="Логин:" />

                <TextBox
                    Grid.Row="1"
                    Width="250"
                    Margin="3,3,6,3"
                    HorizontalAlignment="Stretch"
                    BorderThickness="0"
                    FontSize="18"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="2"
                    Width="250"
                    Margin="3,3,6,3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    FontSize="18"
                    Text="Пароль:" />

                <!--
            <TextBox
                Grid.Row="3"
                Margin="3,3,6,3"
                HorizontalAlignment="Stretch"
                FontSize="18"
                Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />

                -->
                <PasswordBox
                    Grid.Row="3"
                    Width="250"
                    Margin="3,3,6,3"
                    HorizontalAlignment="Stretch"
                    BorderThickness="0"
                    FontSize="18"
                    PasswordChanged="PasswordToTag"
                    Tag="{Binding Password, Mode=OneWayToSource}" />

                <Button
                    Grid.Row="4"
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Background="#FFADFFE3"
                    BorderThickness="0"
                    Command="{Binding LoginCommand}"
                    Content="Вход"
                    FontSize="16" />

                <x:Code>
                    <![CDATA[
private void PasswordToTag(object sender, RoutedEventArgs e)
{
PasswordBox passwordBox = (PasswordBox)sender;
passwordBox.Tag = passwordBox.Password;
}
]]>
                </x:Code>

            </Grid>

        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" />



    </Grid>
</UserControl>
